{
  "mcpServers": {
    "yourls": {
      "command": "npx",
      "args": [
        "-y",
        "yourls-mcp@latest"
      ],
      "env": {
        "YOURLS_API_URL": "https://your-yourls-domain.com/yourls-api.php",
        "YOURLS_AUTH_METHOD": "signature",
        "YOURLS_SIGNATURE_TOKEN": "your-secret-signature-token"
      }
    }
  }
}